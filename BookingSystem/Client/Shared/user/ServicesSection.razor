@inject IServicioRepositorio ServicioRepo;

<section>
    <h2 class="card-title text-center">Nuestros Servicios</h2>
    <div class="container py-5">
        <div class="row justify-content-center mb-3">
            <div class="col-md-12 col-xl-10">
                <div class="card shadow-0 border rounded-3">
                    <div class="card-body">
                        <div class="row">
                            @foreach(var serv in servicios)
                            {
                            <div class="col-md-12 col-lg-3 col-xl-3 mb-4 mb-lg-0">
                                <div class="bg-image hover-zoom ripple rounded ripple-surface">
                                        <img src="@serv.ImagenUrl" class="w-100" />
                                    <a href="#!">
                                        <div class="hover-overlay">
                                            <div class="mask" style="background-color: rgba(253, 253, 253, 0.15);"></div>
                                        </div>
                                    </a>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-6 col-xl-6">
                                <h5>
                                        @serv.Nombre
                                </h5>
                                <div class="d-flex flex-row">
                                    <div class="text-danger mb-1 me-2">
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                    </div>
                                    <span>60 min</span> <li class="oi oi-clock"></li>
                                </div>
                              
                                <p class="text-truncate mb-4 mb-md-0">
                                        @serv.Descripcion
                                </p>
                            </div>
                            <div class="col-md-6 col-lg-3 col-xl-3 border-sm-start-none border-start">
                                <div class="d-flex flex-row align-items-center mb-1">
                                    <h4 class="mb-1 me-1">
                                            $@serv.Precio
                                    </h4>
                                </div>
                                <h6 class="text-success">Impuestos Incluidos</h6>
                                <div class="d-flex flex-column mt-3">
                                    <a href="/AgendarCitaForm" class="btn btn-outline-primary btn-sm mt-1" type="button">
                                        Agendar Cita
                                    </a>
                                </div>
                            </div>
                                <br />
                            }
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@code{
    private List<Servicio> servicios = new List<Servicio>();
    protected override async Task OnInitializedAsync()
    {
        servicios = await ServicioRepo.GetServicio();
    }
}