@inherits ComponentBase
@inject NavigationManager NavigationManager

<div class="admin-sidebar ">
    <MudContainer Class="admin-menu-container">
        <MudPaper Class="admin-menu">
            <div class="menu-item" @onclick="IrAlServicio">
                <MudIcon Icon="@Icons.Material.Filled.LocalOffer" Class="custom-icon" />
                <div class="option-text">Servicios</div>
            </div>
        </MudPaper>
        <MudPaper Class="admin-menu">
            <div class="menu-item" @onclick="IrAlProfesional">
                <MudIcon Icon="@Icons.Material.Filled.People" Class="custom-icon" />
                <div class="option-text">Profesional</div>
            </div>
        </MudPaper>
    </MudContainer>
</div>

@code {
    private void NavigateTo(string url)
    {
        NavigationManager.NavigateTo(url);
    }

    private async Task IrA(string url)
    {
        NavigationManager.NavigateTo(url);
    }

    private async Task IrAlProfesional()
    {
        await IrA("/ModalProfesional");
    }

    private async Task IrAlServicio()
    {
        await IrA("/ModalServicio");
    }
}

<style>
    /* wwwroot/css/site.css */
    .admin-sidebar {
        width: 250px; /* Ajusta el ancho de la barra lateral según tus necesidades */
        height: 100vh; /* Ajusta la altura de la barra lateral al 100% del viewport */
        background-color: #2E85E1; /* Color de fondo de la barra lateral */
        color: #fff; /* Color del texto en la barra lateral */
        padding-top: 20px; /* Ajusta el espaciado superior según tus necesidades */
    }

    .admin-menu-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 16px; /* Ajusta el relleno según tus necesidades */
    }

    .admin-menu {
        width: 100%; /* Ocupa el ancho completo de la barra lateral */
        margin-bottom: 16px;
    }

        .admin-menu:hover {
            transform: scale(1.1);
        }

    .menu-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        cursor: pointer;
    }

    .option-text {
        margin-top: 8px;
        font-size: 18px;
        font-weight: bold;
    }

    .custom-icon {
        font-size: 2em;
        height: 2em;
    }
</style>
